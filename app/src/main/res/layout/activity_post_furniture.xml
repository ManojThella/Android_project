<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E2F1F3"
    android:padding="16dp">

    <ImageView
        android:id="@+id/furnitureImageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/placeholder_image" />

    <Button
        android:id="@+id/pickImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/furnitureImageView"
        android:layout_marginStart="145dp"
        android:layout_marginTop="10dp"
        android:onClick="onPickImageClick"
        android:text="Pick Image" />

    <EditText
        android:id="@+id/productNameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pickImageButton"
        android:background="#beeae4"
        android:layout_marginTop="8dp"
        android:hint="Product Name"
        android:padding="8dp" />

    <!-- Edit Text for Description -->
    <EditText
        android:id="@+id/descriptionEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#beeae4"
        android:layout_below="@id/productNameEditText"
        android:layout_marginTop="8dp"
        android:hint="Description"
        android:padding="8dp" />

    <!-- Edit Text for Condition -->
    <EditText
        android:id="@+id/conditionEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#beeae4"
        android:layout_below="@id/descriptionEditText"
        android:layout_marginTop="8dp"
        android:hint="Condition"
        android:padding="8dp" />

    <!-- Edit Text for Price -->
    <EditText
        android:id="@+id/priceEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#beeae4"
        android:layout_below="@id/conditionEditText"
        android:layout_marginTop="8dp"
        android:hint="Price"
        android:inputType="numberDecimal"
        android:padding="8dp" />

    <!-- Edit Text for Address -->
    <EditText
        android:id="@+id/addressEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/priceEditText"
        android:background="#beeae4"
        android:layout_marginTop="8dp"
        android:hint="Address"
        android:padding="8dp" />

    <Button
        android:id="@+id/postButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/addressEditText"
        android:layout_marginTop="8dp"
        android:layout_marginStart="145dp"
        android:onClick="onPostButtonClick"
        android:text="Post" />

</RelativeLayout>
